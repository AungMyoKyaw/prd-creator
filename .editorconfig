# .editorconfig
# Top-most EditorConfig file
root = true

# -------------------------------------------------------------------
# Global defaults (applies to all files unless overridden below)
# -------------------------------------------------------------------
[*]
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# -------------------------------------------------------------------
# JavaScript / TypeScript / React files
# -------------------------------------------------------------------
[*.{js,jsx,ts,tsx}]
# use project-wide defaults (kept explicit for clarity)
indent_style = space
indent_size = 2
tab_width = 2
charset = utf-8

# -------------------------------------------------------------------
# JSON (including package-lock / config files)
# -------------------------------------------------------------------
[*.json]
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true
insert_final_newline = true

# -------------------------------------------------------------------
# CSS / SCSS / PostCSS / styles
# -------------------------------------------------------------------
[*.{css,scss,less,pcss}]
indent_style = space
indent_size = 2
tab_width = 2

# -------------------------------------------------------------------
# HTML / XML / SVG / JSX-like markup
# -------------------------------------------------------------------
[*.{html,htm,xml,svg}]
indent_style = space
indent_size = 2
tab_width = 2
charset = utf-8

# -------------------------------------------------------------------
# YAML files (CI, config)
# -------------------------------------------------------------------
[*.{yml,yaml}]
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true

# -------------------------------------------------------------------
# Markdown (documentation) - preserve trailing spaces for hard breaks
# -------------------------------------------------------------------
[*.{md,mdx}]
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = false
insert_final_newline = true
charset = utf-8

# -------------------------------------------------------------------
# Shell scripts
# -------------------------------------------------------------------
[*.sh]
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# -------------------------------------------------------------------
# Dockerfile
# -------------------------------------------------------------------
[Dockerfile]
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = lf
charset = utf-8

# -------------------------------------------------------------------
# Makefile â€” requires hard tabs for rules. EXPLICIT EXCEPTION.
# -------------------------------------------------------------------
[Makefile]
indent_style = tab
tab_width = 8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
